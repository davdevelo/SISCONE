<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content">

    <AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="201dp"
            android:layout_height="wrap_content"
            android:text="LOGIN"
            android:id="@+id/textEncabezado"
            android:layout_x="456dp"
            android:layout_y="31dp"
            android:textSize="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cédula :"
            android:id="@+id/textView"
            android:layout_x="300dp"
            android:layout_y="96dp"
            android:textSize="25dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editCedula"
            android:layout_x="506dp"
            android:layout_y="84dp"
            android:text="Ingrese su cedula" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contraseña :"
            android:id="@+id/textView2"
            android:layout_x="295dp"
            android:layout_y="150dp"
            android:textSize="25dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editContraseña"
            android:layout_x="508dp"
            android:layout_y="146dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo de Usuario :"
            android:id="@+id/textView3"
            android:layout_x="299dp"
            android:layout_y="195dp"
            android:textSize="25dp" />

        <Spinner
            android:layout_width="236dp"
            android:layout_height="39dp"
            android:id="@+id/comboBoxTipoUSR"
            android:layout_x="508dp"
            android:layout_y="195dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INGRESAR"
            android:id="@+id/buttonIngresar"
            android:layout_x="292dp"
            android:layout_y="280dp"
            android:textSize="24dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LIMPIAR"
            android:id="@+id/buttonLimpiar"
            android:layout_x="464dp"
            android:layout_y="282dp"
            android:textSize="24dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SALIR"
            android:id="@+id/buttonSalir"
            android:layout_x="630dp"
            android:layout_y="282dp"
            android:textSize="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No esta registrado ? Cree su cuenta"
            android:id="@+id/textRegistro"
            android:layout_x="310dp"
            android:layout_y="350dp"
            android:textSize="25dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CREAR CUENTA"
            android:id="@+id/buttonCrearCuenta"
            android:layout_x="433dp"
            android:layout_y="392dp"
            android:textSize="24dp" />

    </AbsoluteLayout>
</RelativeLayout>


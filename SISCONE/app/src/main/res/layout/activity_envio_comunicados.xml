                <Button
                    android:id="@+id/buttonRegresarEnvioComunicados"
                    android:layout_width="wrap_content"
                    android:layout_height="72dp"
                    android:layout_x="336dp"
                    android:layout_y="330dp"
                    android:text="REGRESAR MENU"
                    android:textSize="18dp"
                    android:background="@drawable/btn_cicle"
                    android:drawableLeft="@mipmap/home" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Titulo Comunicado:"
                    android:id="@+id/textView16"
                    android:layout_x="140dp"
                    android:layout_y="111dp"
                    android:textSize="25dp" />

                <EditText
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/editTextTituloComunicado"
                    android:layout_x="380dp"
                    android:layout_y="101dp"
                    android:maxLines="1"
                    android:maxLength="50"
                    android:minLines="1"
                    android:maxHeight="1dp"
                    android:maxWidth="20dp"
                    android:singleLine="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DescripciÃ³n"
                    android:id="@+id/textView17"
                    android:layout_x="140dp"
                    android:layout_y="168dp"
                    android:textSize="25dp" />

                <EditText
                    android:layout_width="440dp"
                    android:layout_height="92dp"
                    android:id="@+id/editTextDescripcionComunicado"
                    android:layout_x="140dp"
                    android:layout_y="210dp"
                    android:maxLength="500" />

            </AbsoluteLayout>
        </ScrollView>
    </HorizontalScrollView>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="173dp"
        android:layout_height="204dp"
        android:layout_x="-83dp"
        android:layout_y="70dp"
        android:background="@mipmap/logo"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="57dp"
        android:layout_marginStart="57dp" />

</RelativeLayout>

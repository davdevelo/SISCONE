<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MenuCurso">


    <HorizontalScrollView
        android:id="@+id/horizontalScrollMenuProfesor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/verticalScrollMenuProfesor" >

            <AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.example.davdevelo.siscone.MenuProfesor"
                android:layout_alignTop="@+id/horizontalScrollMenuProfesor"
                android:layout_centerHorizontal="true">


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_x="125dp"
                    android:layout_y="145dp"
                    android:weightSum="1"
                    android:id="@+id/linearLayout"
                    android:layout_centerHorizontal="true">

                </LinearLayout>

                <TextView
                    android:layout_width="600dp"
                    android:layout_height="wrap_content"
                    android:text="ADMINISTRACION DE CURSOS"
                    android:id="@+id/textViewCabeceraCurso"
                    android:layout_below="@+id/horizontalScrollMenuProfesor"
                    android:layout_centerHorizontal="true"
                    android:textColor="#58adcf"
                    android:textSize="30dp"
                    android:textAlignment="center"
                    android:layout_x="0dp"
                    android:layout_y="10dp"
                    android:textStyle="bold" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="75dp"
                    android:text="REGISTRAR CURSO"
                    android:id="@+id/buttonRegistrarCurso"
                    android:layout_below="@+id/horizontalScrollMenuProfesor"
                    android:layout_centerHorizontal="true"
                    android:layout_x="197dp"
                    android:layout_y="53dp"
                    android:background="@drawable/btn_cicle"
                    android:drawableLeft="@mipmap/documents" />

                <TextView
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:text="Lista de Cursos"
                    android:id="@+id/textViewListaCursos"
                    android:layout_x="125dp"
                    android:layout_y="135dp"
                    android:gravity="center_horizontal"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <ListView
                    android:layout_width="448dp"
                    android:layout_height="231dp"
                    android:id="@+id/listViewCusros"
                    android:choiceMode="singleChoice"
                    android:layout_x="128dp"
                    android:layout_y="159dp" />

                <Button
                    android:layout_width="159dp"
                    android:layout_height="wrap_content"
                    android:text="Regresar"
                    android:id="@+id/buttonRegresarAC"
                    android:layout_x="510dp"
                    android:layout_y="187dp"
                    android:background="@drawable/btn_cicle"
                    android:drawableLeft="@mipmap/homedark" />

            </AbsoluteLayout>
        </ScrollView>
    </HorizontalScrollView>

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="173dp"
        android:layout_height="204dp"
        android:layout_x="63dp"
        android:layout_y="110dp"
        android:background="@mipmap/logo"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>

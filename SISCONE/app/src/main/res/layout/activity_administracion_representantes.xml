<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.davdevelo.siscone.AdministracionRepresentantes">

    <HorizontalScrollView
        android:id="@+id/horizontalScrollMenuProfesor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/verticalScrollMenuProfesor" >

            <AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context="com.example.davdevelo.siscone.MenuProfesor"
                android:layout_alignTop="@+id/horizontalScrollMenuProfesor"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true">


                <TextView
                    android:layout_width="600dp"
                    android:layout_height="wrap_content"
                    android:text="ADMINISTRACIÃ“N REPRESENTANTES"
                    android:id="@+id/textViewCabeceraAdministracionRepresentantes"
                    android:layout_alignTop="@+id/horizontalScrollMenuProfesor"
                    android:layout_toRightOf="@+id/horizontalScrollMenuProfesor"
                    android:layout_toEndOf="@+id/horizontalScrollMenuProfesor"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    android:layout_x="0dp"
                    android:layout_y="5dp"
                    android:textColor="#58adcf" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Agregar Representante"
                    android:id="@+id/buttonAgregarRepresentante"
                    android:layout_below="@+id/horizontalScrollMenuProfesor"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_x="210dp"
                    android:layout_y="120dp" />

                <Button
                    android:layout_width="152dp"
                    android:layout_height="wrap_content"
                    android:text="REGRESAR"
                    android:id="@+id/buttonRegresoFormularioAR"
                    android:layout_x="435dp"
                    android:layout_y="200dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Registrar Nuevo "
                    android:id="@+id/buttonRegitrarNuevoRepresentante"
                    android:layout_x="25dp"
                    android:layout_y="200dp" />


                <TextView
                    android:id="@+id/textViewCedulaRepresentane"
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:layout_x="40dp"
                    android:layout_y="60dp"
                    android:text="Cedula Representante"
                    android:textSize="25dp" />



                <Button
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="LIMPIAR"
                    android:id="@+id/buttonLimpiarRegistroAR"
                    android:layout_x="230dp"
                    android:layout_y="200dp" />

                <EditText
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/editTextCedulaRepresentanteAR"
                    android:layout_x="320dp"
                    android:layout_y="50dp"
                    android:singleLine="true"
                    android:maxLength="10" />

            </AbsoluteLayout>
        </ScrollView>
    </HorizontalScrollView>

</RelativeLayout>
